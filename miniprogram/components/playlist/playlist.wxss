.playlist-container {
  position: relative;
  width: 220rpx;
  padding-bottom: 20rpx;
}

.playlist-img {
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}

.playlst-img-mask {
  position: absolute;
  background-image: linear-gradient(-180deg, rgba(0, 0, 0, 0.2) 36rpx, rgb(0, 0, 0, 0.1) 70rpx, rgba(0, 0, 0, 0));
  z-index: 1;
  width: 100%;
  height: 220rpx;
  top: 0;
  left: 0;
}

.playlist-playcount {
  position: absolute;
  right: 10rpx;
  top: 4rpx;
  padding-left: 40rpx;
  color: #fff;
  font-size: 24rpx;
  z-index: 2;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0.6);
  background: url(data:image/svg+xml;base64,) no-repeat;
}

.playlist-name {
  line-height: 1.2;
  font-size: 26rpx;
  padding: 2px 0 0 6px;
  display: -webkit-box;
   display: -moz-box;
  -webkit-box-orient: vertical;
   -moz-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
